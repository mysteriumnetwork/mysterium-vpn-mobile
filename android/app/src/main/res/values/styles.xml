<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:colorControlActivated">@color/ColorMain</item>
        <item name="android:windowBackground">@drawable/background_light_theme</item>
        <item name="colorPrimary">#622461</item>
        <item name="colorPrimaryDark">#501d4f</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#622461</item>
        <item name="colorPrimaryDark">#501d4f</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <color name="ColorMain">#622461</color>
    <color name="ColorWhite">#ffffff</color>
    <color name="ColorSecondary">#999999</color>
    <color name="ColorBackground">#f9f9f9</color>
    <color name="ColorDanger">#dc3545</color>

    <style name="IconButton">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="VpnStatsLabel">
        <item name="android:textColor">@color/ColorSecondary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VpnStatsValue">
        <item name="android:textColor">@color/ColorMain</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProposalFilterButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/ColorMain</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:foregroundGravity">fill</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProposalFilterTitle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ProposalFilterValue">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="BigPrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="BlockchainAddressText">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Primary Button  -->
    <style name="Widget.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.PrimaryButton</item>
        <item name="android:background">@drawable/shape_primary_button</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_medium</item>
    </style>

    <style name="TextAppearance.PrimaryButton" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--  TextButton -->
    <style name="Widget.TextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.PrimaryButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">112dp</item>
    </style>

    <style name="TextAppearance.TextButton" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--  Rounded SemiTransparent ImageButton -->
    <style name="Widget.SemiTransparentButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_icon_background</item>
    </style>

    <!--  Transparent TextButton  -->
    <style name="Widget.TransparentTextButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/TextAppearance.TransparentTextButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="TextAppearance.TransparentTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--  TextStyles  -->
    <style name="TextAppearance.HeadTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.BodyMedium" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.BodyBlack" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--  CardViewStyle  -->
    <style name="Widget.PrimaryCardView" parent="Base.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>
    
    <!--  TabLayoutStyle -->
    <style name="FloatTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@null</item>
    </style>

    <style name="Widget.SemiTransparentCardView2" parent="Base.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/common_icon_background_white</item>
    </style>

</resources>
