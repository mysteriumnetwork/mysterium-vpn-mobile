    <!--  CardViewStyle  -->
    <style name="Widget.PrimaryCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="Widget.SmallRoundedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/manual_connect_card_view_light_blue</item>
    </style>

    <style name="Widget.SemiTransparentCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/common_icon_background_white</item>
    </style>

    <style name="Widget.BordersCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/manual_connect_filter_borders_white</item>
        <item name="cardBackgroundColor">@color/manual_connect_filter_background_white</item>
    </style>

    <!--  TabLayoutStyle -->
    <style name="FloatTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@null</item>
    </style>

    <style name="CustomShapeTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@null</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
    </style>

    <!--  RecyclerViewStyle  -->
    <style name="ScrollbarRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb_drawable</item>
        <item name="android:scrollbarTrackVertical">@drawable/track_drawable</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!--  SpinnerStyle  -->
    <style name="SpinnerStyle">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
