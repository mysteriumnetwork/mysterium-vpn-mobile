<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <color name="ColorMain">#622461</color>
    <color name="ColorWhite">#ffffff</color>
    <color name="ColorSecondary">#999999</color>
    <color name="ColorBackground">#f9f9f9</color>
    <color name="ColorDanger">#dc3545</color>

    <style name="IconButton">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="VpnStatsLabel">
        <item name="android:textColor">@color/ColorSecondary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VpnStatsValue">
        <item name="android:textColor">@color/ColorMain</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProposalFilterButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/ColorMain</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:foregroundGravity">fill</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProposalFilterTitle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ProposalFilterValue">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#999999</item>
    </style>

</resources>
