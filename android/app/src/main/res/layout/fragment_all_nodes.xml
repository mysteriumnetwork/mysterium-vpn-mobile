<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/countriesTextView"
        style="@style/TextAppearance.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_size_medium_large"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        android:text="@string/manual_connect_counties_label"
        android:textColor="@color/manual_connect_value_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sortByView"
        style="@style/TextAppearance.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        android:layout_marginEnd="@dimen/margin_padding_size_large"
        android:text="@string/manual_connect_nodes_label"
        android:textColor="@color/manual_connect_value_white"
        app:drawableStartCompat="@drawable/semi_transparent_arrow_drop_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nodesRecyclerView"
        style="@style/ScrollbarRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_padding_size_small_medium"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        android:clipToPadding="false"
        android:fadeScrollbars="false"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/thumb_drawable"
        android:scrollbarTrackVertical="@drawable/track_drawable"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortByView"
        tools:itemCount="20"
        tools:listitem="@layout/item_country_nodes" />

</androidx.constraintlayout.widget.ConstraintLayout>
